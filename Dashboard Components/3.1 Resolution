import streamlit as st
import plotly.express as px

# Set page configuration with the new theme settings
st.set_page_config(page_title="Internet Usage Analysis", layout="wide", page_icon="üåê")

# Custom theme styling (incorporating your provided lines)
st.markdown("""
    <style>
    /* Global app background and font style */
    .stApp {
        background-color: black;
        color: white;
        font-family: 'Times New Roman', serif;
